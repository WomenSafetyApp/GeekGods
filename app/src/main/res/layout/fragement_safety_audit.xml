<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/checkRatingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:padding="16dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40sp"
        android:textColor="#000"
        android:text="Ratings"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:background="@drawable/layout"
        android:id="@+id/security_text_view"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#FFF"
        android:layout_marginLeft="10sp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="20sp"
        android:text="Security" />
        <RatingBar

            android:id="@+id/securityRating1"
            android:theme="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"

            android:layout_height="wrap_content"
            android:isIndicator="true" />
        <TextView
            android:padding="16dp"
            android:background="@drawable/layout"
            android:id="@+id/transport_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_vertical"
            android:textColor="#FFF"
            android:layout_marginLeft="10sp"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:text="Transport" />

    <RatingBar

        android:id="@+id/transportRating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"

        android:theme="@style/RatingBar"

        android:isIndicator="true" />

    <TextView
        android:padding="16dp"
        android:background="@drawable/layout"
        android:id="@+id/walk_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#FFF"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:text="Walk Path" />
        <RatingBar

            android:id="@+id/walkRating1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:theme="@style/RatingBar"
            android:isIndicator="true" />



    <TextView
        android:padding="16dp"
        android:background="@drawable/layout"
        android:id="@+id/lights_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="#FFF"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:textSize="20sp"
        android:text="Lights" />


    <RatingBar

        android:id="@+id/lightRating1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10sp"
        android:theme="@style/RatingBar"
        android:isIndicator="true" />
        <TextView
            android:padding="16dp"
            android:background="@drawable/layout"
            android:id="@+id/text_view_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_gravity="center_vertical"
            android:textColor="#FFF"
            android:layout_marginLeft="10sp"
            android:textSize="20sp"
            android:text="People"
            />
        <RatingBar

            android:id="@+id/peopleRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            android:layout_marginTop="10sp"

            android:isIndicator="true" />
        <TextView
            android:background="@drawable/layout"
            android:id="@+id/text_view_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#FFF"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:textSize="20sp"
            android:text="Gender Usage"
            android:padding="16dp"
            />
        <RatingBar

            android:id="@+id/genderRating"
            android:layout_width="wrap_content"
            android:theme="@style/RatingBar"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content"

            android:isIndicator="true" />
        <TextView
            android:background="@drawable/layout"
            android:id="@+id/text_view_feeling"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#FFF"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:padding="16dp"
            android:textSize="20sp"
            android:text="Feeling"
            />
        <RatingBar

            android:id="@+id/feelingRating"
            android:layout_width="wrap_content"
            android:theme="@style/RatingBar"
            android:layout_marginTop="10sp"

            android:layout_height="wrap_content"
            android:isIndicator="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:textSize="30sp"
                android:padding="16dp"
                android:text="Total users rated this Place"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/total_users_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="0"
                />
        </LinearLayout>


    </LinearLayout>
        <ProgressBar
            android:id="@+id/checkRatingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
</ScrollView>