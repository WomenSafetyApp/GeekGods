<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/submitProgressBar"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    <LinearLayout
        android:id="@+id/addRatingView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/safetyaudit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:text="Safety Audit"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:text="Security"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout"/>

        <com.hsalf.smilerating.SmileRating
            android:id="@+id/securityRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Walk Path"
            android:background="@drawable/layout"
            android:layout_marginBottom="20dp"/>
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/walkRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Transport "
            android:background="@drawable/layout"
            android:layout_marginBottom="20dp"/>
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/transportRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Lights"
            android:background="@drawable/layout"
            android:layout_marginBottom="20dp"/>

        <com.hsalf.smilerating.SmileRating
            android:id="@+id/lightRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="People"
            android:background="@drawable/layout"
            android:layout_marginBottom="20dp"/>
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/peopleRatingBar"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/layout"
            android:layout_marginBottom="20sp"
            android:text="Gender Usage" />
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/genderRatingBar"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/layout"
            android:layout_marginBottom="20sp"
            android:text="Feeling" />
        <com.hsalf.smilerating.SmileRating
            android:id="@+id/feelingRatingBar"
            android:layout_width="wrap_content"
            android:layout_marginBottom="20sp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/submitRatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Submit" />


    </LinearLayout>
    </RelativeLayout>


</ScrollView>